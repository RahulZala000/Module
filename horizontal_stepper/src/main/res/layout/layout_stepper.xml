<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/look0"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="3dp"
            android:background="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pets"
            app:layout_constraintTop_toTopOf="@+id/tv_pets" />

        <TextView
            android:id="@+id/tv_pets"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/radio_normal"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/look0" />

        <TextView
            android:id="@+id/tv_textt"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ABCD"
            android:maxLines="2"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_pets"
            app:layout_constraintStart_toStartOf="@+id/tv_pets"
            app:layout_constraintTop_toBottomOf="@+id/tv_pets"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_pets" />

        <View
            android:id="@+id/look1"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="3dp"
            android:background="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pets"
            app:layout_constraintStart_toEndOf="@+id/tv_pets"
            app:layout_constraintTop_toTopOf="@+id/tv_pets" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>

